<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #072365;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quinzical.MainMenu.MainMenuController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="36.0" prefWidth="529.0" text="Welcome to Quinzical!" textFill="WHITE">
         <font>
            <Font name="SansSerif Bold" size="30.0" />
         </font>
         <effect>
            <Bloom />
         </effect>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      <VBox alignment="CENTER" prefHeight="264.0" prefWidth="528.0" spacing="20.0">
         <children>
            <Button fx:id="gamesModuleButton" alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleGamesModuleButtonClick" prefHeight="62.0" prefWidth="215.0" style="-fx-background-color: #b82b35;" text="Games Module" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="SansSerif Bold" size="20.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <effect>
                  <DropShadow color="#00000040" height="18.0" offsetX="3.0" offsetY="3.0" radius="8.5" spread="0.03" width="18.0" />
               </effect>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="practiceModuleButton" alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handlePracticeModuleButtonClick" prefHeight="62.0" prefWidth="215.0" style="-fx-background-color: #b82b35;" text="Practice Module" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="SansSerif Bold" size="20.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <effect>
                  <DropShadow color="#00000040" height="18.0" offsetX="3.0" offsetY="3.0" radius="8.5" spread="0.03" width="18.0" />
               </effect>
            </Button>
            <Button fx:id="exitButton" alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleExitButton" prefHeight="62.0" prefWidth="215.0" style="-fx-background-color: #b82b35;" text="Exit" textAlignment="CENTER" textFill="WHITE">
